{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "frontend/dist"
        }
      },
      {
        "src": "backend/api.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "backend/api.py" },
      { "src": "/(.*)", "dest": "frontend/dist/$1" }
    ],
    "functions": {
      "backend/api.py": {
        "runtime": "python3.9"
      }
    }
  }